<Application
  StartupUri="MainWindow.xaml"
  x:Class="LiveChartsLearn.App"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:local="clr-namespace:LiveChartsLearn"
  xmlns:materialDesign="https://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:wpf="http://materialdesigninxaml.net/winfx/xaml/themes"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Application.Resources>
    <ResourceDictionary>
      <ResourceDictionary.MergedDictionaries>

        <wpf:BundledTheme
          BaseTheme="Inherit"
          PrimaryColor="DeepPurple"
          SecondaryColor="Lime" />

        <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />

        <ResourceDictionary>
          <FontFamily x:Key="JosefinSans">pack://application;,,,/#Josefin Sans Bold</FontFamily>
        </ResourceDictionary>

      </ResourceDictionary.MergedDictionaries>
    </ResourceDictionary>
  </Application.Resources>
</Application>